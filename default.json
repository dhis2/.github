{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with DHIS2 repos",
  "extends": [
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    ":prConcurrentLimit20",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "automergeType": "branch",
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/dhis2/ui"],
      "groupName": "ui monorepo"
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/dhis2/cli"],
      "groupName": "cli monorepo"
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/dhis2/app-platform"],
      "groupName": "app-platform monorepo"
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/dhis2/cli-utils-cypress"],
      "groupName": "cli-utils-cypress monorepo"
    }
  ]
}
